// FILE: tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",          // Works well with "bundler" resolution
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler", // <<< REVERTED TO bundler
    // "allowImportingTsExtensions": true, // Not strictly needed with bundler + Vite
    "resolveJsonModule": true,    // Should be fine with module: ESNext and bundler
    "isolatedModules": true,
    "emitDeclarationOnly": true,  // TSC does type checking & .d.ts, Vite does .js emit
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,       // Keep these for good practice
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "api"], 
  "references": [{ "path": "./tsconfig.node.json" }]
}