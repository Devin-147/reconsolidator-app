// FILE: tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    // --- MODIFIED THESE ---
    "module": "NodeNext",          // Was "ESNext"
    "moduleResolution": "NodeNext",  // Was "node16", now matches module
    // --- END MODIFICATIONS ---
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, 
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "api"], 
  // "references": [{ "path": "./tsconfig.node.json" }], // This should remain removed
  "exclude": [
    "node_modules",
    "dist",
    "supabase/functions"
  ]
}