// FILE: tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "NodeNext",         // <<< CHANGED from ESNext
    "skipLibCheck": true,
    "moduleResolution": "node16", // Or "nodenext", compatible with module: "NodeNext"
    "allowImportingTsExtensions": true, // Keep this for .ts imports in .ts files
    "resolveJsonModule": true,
    "isolatedModules": true,       // Good for bundlers like Vite
    // "noEmit": true,             // <<< REMOVED/Commented out, Vercel handles emit. TSC only checks.
    "declaration": true,           // <<< ADDED (helps with composite projects if referenced)
    "declarationMap": true,        // <<< ADDED (helps with composite projects if referenced)
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "api"], 
  "references": [{ "path": "./tsconfig.node.json" }] // Keep reference for now
}