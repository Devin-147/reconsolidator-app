// FILE: tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",        // ESNext is fine with "bundler" or for Vite's direct handling
    "skipLibCheck": true,
    "moduleResolution": "bundler", // Recommended for Vite
    // "allowImportingTsExtensions": true, // Vite handles .ts imports without this if moduleResolution is bundler
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,               // <<< REINSTATED: tsc should only type-check
    // "declaration": false,      // <<< Can be removed if noEmit is true
    // "declarationMap": false,   // <<< Can be removed if noEmit is true
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src", // For your React frontend code
    "api"  // For your Vercel serverless functions
  ], 
  "references": [{ "path": "./tsconfig.node.json" }]
}