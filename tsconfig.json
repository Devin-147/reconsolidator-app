// FILE: tsconfig.json
{
  "compilerOptions": {
    "target": "ESNext", // Modern target
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false, // Let Vite handle .ts -> .js
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,                 // <<< CRITICAL: TSC only type-checks
    "jsx": "react-jsx",
    
    /* Interoperability */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,        // <<< TEMPORARILY false to reduce noise
    "noUnusedParameters": false,    // <<< TEMPORARILY false
    "noFallthroughCasesInSwitch": true,

    /* Path Aliases - Vite will primarily use its own config for this at runtime */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "api", "vite.config.ts", "postcss.config.js", "tailwind.config.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}