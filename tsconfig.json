{
  "compilerOptions": {
    /* --- Path Alias --- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* --- Vite/React Build Options --- */
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* --- Vite Client Types (Modified Path) --- */
    "types": ["./node_modules/vite/client"], // <<<--- MODIFIED THIS LINE

    /* --- Linting / Strictness Options --- */
    "strict": true,
    "noImplicitAny": false, // Keep your overrides if needed
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": false, // Note: Redundant if strict: true
    "noFallthroughCasesInSwitch": true,

    "esModuleInterop": true // Keep if needed

  },
  "include": ["src", "api"], // Scan 'src' AND 'api' folders for TS files (if any in api)
  // Exclude node_modules and build output
  "exclude": ["node_modules", "dist"]
  // Ensure "references" and "files" are NOT present
}