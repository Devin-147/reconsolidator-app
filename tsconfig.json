// FILE: tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "NodeNext",
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "allowImportingTsExtensions": true, 
    "resolveJsonModule": true,
    "isolatedModules": true,
    // "noEmit": true, // Replaced by emitDeclarationOnly
    "emitDeclarationOnly": true, // <<< ADDED THIS
    "declaration": true,         // Keep for declaration files
    "declarationMap": true,      // Keep for source maps for declarations
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "api"], 
  "references": [{ "path": "./tsconfig.node.json" }]
}